@page "/counter"

<PageTitle>Counter</PageTitle>

<MudContainer>
    <MudText Typo=Typo.h3>Counter</MudText>

    <MudText Typo=Typo.body1>Current count: @currentCount</MudText>
    <MudButton Variant=Variant.Filled Color=Color.Primary OnClick=IncrementCount>累加１</MudButton>
    <MudButton Variant=Variant.Filled Color=Color.Primary OnClick=ThrowTestingException>丟出例外</MudButton>
</MudContainer>

@code {
    //## State
    int currentCount = 0;

    void IncrementCount(MouseEventArgs e)
    {
        currentCount++;
    }

    void ThrowTestingException(MouseEventArgs e)
    {
        throw new ApplicationException("測試例外狀況。");
    }
}
